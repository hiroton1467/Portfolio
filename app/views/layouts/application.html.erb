<!DOCTYPE html>
<html>
  <head>
    <title>PF</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <% if admin_signed_in? %>
      <p><%= link_to "ログアウト", destroy_admin_session_path, method: :delete %> </p>
      <p><%= link_to "継続一覧", admin_continues_path %></p>
      <p><%= link_to "ユーザー一覧", admin_users_path %></p>
      <p><%#= link_to "注文履歴", admin_root_path %></p>

    <% elsif user_signed_in? %>
      <p><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></p>
      <p><%= link_to "継続一覧", continues_path %></p>
      <p><%#= link_to "カート", cart_items_path(current_customer.id) %></p>
      <p><%= link_to "マイページ", user_path(current_user.id) %></p>
      <p><%= link_to "新規投稿", new_continue_path %></p>
      
      <div class="search_form">
    <%= form_with url: search_path, local: true, method: :get do |f| %>
      <%= f.text_field :word %>

      <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["部分一致","partial_match"]]) %>
      <%= f.submit "検索", class: "btn btn-primary" %>
    <% end %>
  </div>

    <% else  %>
      <p><%= link_to "新規登録", new_user_registration_path %></p>
      <p><%= link_to "ログイン", new_user_session_path %></p>
      <p><%#= link_to "商品一覧", items_path %></p>
    <% end %>
  </header>
    <%= yield %>
  </body>
</html>
