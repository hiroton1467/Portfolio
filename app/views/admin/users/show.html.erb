<div class="container">
 <div class="row">
  <div class="col-lg-4" style="background-color: orange;">

   <h1>マイページ</h1>

   <table class = "table">
    <tbody>
     <%= image_tag @user.get_profile_image(100,100) %>
     <tr>
      <td>氏名</td>
      <td><%= @user.name %></td>
     </tr>
     <tr>
      <td><%= link_to "いいね一覧",  admin_favorite_path(@user.id) %></td>
      <td><%= link_to "編集する",  edit_admin_user_path(@user.id) %></td>
     </tr>
    </tbody>
   </table>
  </div>
 </div>
 
 <div class="row">
  <div class="col-lg-12">
   <table class="table table-hover table-inverse">
 <tbody>
  <% @continues.each do |continue| %>
  <tr>
   <td><%= link_to continue.title, admin_continue_path(continue.id) %></td>
   <td><%= "#{continue.likes.count} いいね" %></td>
   <td><%= "#{continue.comments.count} コメント" %></td>
   <td><%= link_to "削除", admin_continue_path(continue.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
  </tr>
  <% end %>
 </tbody>
</table>
  </div>
 </div>
</div>