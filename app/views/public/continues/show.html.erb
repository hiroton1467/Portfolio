<div>
  <span style="color:green;"><%= flash[:notice] %></sp>
</div>

<div>
<p><%= @continue.post %></p>
</div>

<%= button_to "開始",start_path%>
<%= button_to "終了",end_path%>








<div>
<% if @continue.liked_by?(current_user) %>
    <%= link_to continue_likes_path(@continue), method: :delete do %>
        <span style="color:red;">❤︎</span>
        <%= @continue.likes.count %> いいね
    <% end %>
<% else %>
    <%= link_to continue_likes_path(@continue), method: :post do %>
        <span>♡︎</span>
        <%= @continue.likes.count %> いいね
    <% end %>
<% end %>
</div>

<div>
  <p>コメント件数:<%= @continue.comments.count %></p>
  <% @continue.comments.each do |comment| %>
   <p><%= image_tag comment.user.get_profile_image(100,100) %></p>
   <%= comment.user.name %>
   <%= comment.content %>
   <% if comment.user == current_user %>
      <%= link_to "削除", continue_comment_path(comment.continue, comment), method: :delete %>
   <% end %>
  <% end %>
</div>

<div>
  <%= form_with model: [@continue, @comment] do |f| %>
    <%= f.text_area :content, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>

